
<div class="paginacion-wrap mini-100">
    <div class="paginacion-content">

		<nav class="pagination" role="navigation">
		  {{#if prev}}
		  <a class="newer-posts" href="{{page_url prev}}">
		  	<span class="icon-izquierda izquierda"></span> <span class="anterior">Anterior</span> 
		  </a>
		  {{/if}}
		  <span class="page-number">Pagina {{page}} de {{pages}}</span>
		  {{#if next}}
		  <a class="older-posts" href="{{page_url next}}"> <span class="siguiente">Siguiente</span> 
		  	<span class="icon-derecha derecha"></span>
		  </a>
		  {{/if}}
		</nav>

    </div>
</div>
